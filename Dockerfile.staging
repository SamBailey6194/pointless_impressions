# Dockerfile.staging for staging environment
# Python slim image with Bookworm
FROM python:3.13-slim-bookworm

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Set working directory
WORKDIR /app

# System dependencies
RUN apt-get update && apt-get install -y \
    curl \
    netcat-openbsd \
    gcc \
    libpq-dev \
    && curl -fsSL https://deb.nodesource.com/setup_lts.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# UV binary
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

# Install Python dependencies
COPY requirements.txt .
RUN uv pip install --upgrade pip --system
RUN uv pip install -r requirements.txt --system

# Copy project files
COPY pointless_impressions_src/ ./pointless_impressions_src/

# Make entrypoint executable
RUN chmod +x ./pointless_impressions_src/staging-entrypoint.sh

# Expose port
EXPOSE 8000

# Default command for staging
CMD ["/app/pointless_impressions_src/staging-entrypoint.sh"]
