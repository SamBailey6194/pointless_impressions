{
  "name": "theme",
  "version": "4.2.0",
  "type": "module",
  "description": "",
  "engines": {
    "node": "24.2.0",
    "npm": "11.3.0"
  },
  "scripts": {
    "start": "npm run dev:full",
    "dev": "cross-env NODE_ENV=development postcss pointless_impressions_src/theme/static_src/src/css/styles.css -o pointless_impressions_src/static/css/styles.css --watch",
    "dev:js": "esbuild pointless_impressions_src/theme/static_src/src/js/**/*.js --bundle --sourcemap --outdir=pointless_impressions_src/static/js --outbase=pointless_impressions_src/theme/static_src/src/js --watch",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:js\"",
    "build": "npm run clean && npm run build:tailwind && npm run build:css:hash && npm run build:js",
    "build:dev": "npm run clean && npm run build:tailwind:dev && npm run dev:js:single",
    "clean": "node pointless_impressions_src/theme/static_src/src/build.js/clean.js",
    "build:css:hash": "node pointless_impressions_src/theme/static_src/src/build.js/hash-css.js",
    "build:tailwind": "cross-env NODE_ENV=production postcss pointless_impressions_src/theme/static_src/src/css/styles.css -o pointless_impressions_src/static/css/styles.css",
    "build:tailwind:dev": "cross-env NODE_ENV=development postcss pointless_impressions_src/theme/static_src/src/css/styles.css -o pointless_impressions_src/static/css/styles.css",
    "build:js": "node pointless_impressions_src/theme/static_src/src/build.js/hash-js.js",
    "build:js:staging": "npm run build:js",
    "build:js:production": "npm run build:js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:home": "jest pointless_impressions_src/theme/static_src/src/tests.js/jest/home/__tests__/",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open",
    "cypress:home": "cypress run --spec 'pointless_impressions_src/theme/static_src/src/tests.js/cypress/e2e/home/**/*'",
    "test:all": "npm run test && npm run cypress:run",
    "heroku-postbuild": "npm run build && python manage.py collectstatic --noinput && python manage.py migrate --noinput"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "glob": "^11.0.3",
    "cross-env": "^7.0.3",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "@tailwindcss/postcss": "^4.1.11",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.11"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "concurrently": "^9.2.1",
    "cypress": "^15.5.0",
    "daisyui": "^5.3.8",
    "jest": "^30.2.0",
    "postcss-nested": "^7.0.2",
    "postcss-simple-vars": "^7.0.1",
    "tailwindcss": "^4.1.11"
  }
}