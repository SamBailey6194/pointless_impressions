{
  "name": "theme",
  "version": "4.2.0",
  "type": "module",
  "description": "",
  "scripts": {
    "start": "npm run dev:full",
    "dev": "cross-env NODE_ENV=development postcss ./src/css/styles.css -o ../../static/css/styles.css --watch",
    "dev:js": "esbuild ./src/js/**/*.js --bundle --sourcemap --outdir=../../static/js --outbase=./src/js --watch",
    "dev:js:single": "esbuild ./src/js/header_footer.js --bundle --sourcemap --outfile=../../static/js/header_footer.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:js\"",
    "build": "npm run clean && npm run build:tailwind && npm run build:js",
    "build:dev": "npm run clean && npm run build:tailwind:dev && npm run dev:js:single",
    "clean": "rimraf ../../static/css/* ../../static/js/*",
    "build:tailwind": "cross-env NODE_ENV=production postcss ./src/css/styles.css -o ../../static/css/styles.css",
    "build:tailwind:dev": "cross-env NODE_ENV=development postcss ./src/css/styles.css -o ../../static/css/styles.css",
    "build:js": "node src/build.js/hash-js.js",
    "build:js:staging": "npm run build:js",
    "build:js:production": "npm run build:js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:home": "jest ./src/tests.js/jest/home/__tests__/",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open",
    "cypress:home": "cypress run --spec './src/tests.js/cypress/e2e/home/**/*'",
    "test:all": "npm run test && npm run cypress:run",
    "heroku-postbuild": "npm install && npm run build && cd ../../../.. && python manage.py collectstatic --noinput && python manage.py migrate --noinput"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "cypress": "^15.5.0",
    "daisyui": "^5.3.8",
    "esbuild": "^0.25.11",
    "jest": "^30.2.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-nested": "^7.0.2",
    "postcss-simple-vars": "^7.0.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.11"
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "glob": "^11.0.3",
    "path": "^0.12.7",
    "postcss-hash": "^3.0.0"
  }
}
