# -----------------------------
# Django settings
# -----------------------------
DJANGO_SECRET_KEY=your-staging-secret-key-generate-a-secure-one
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=your-staging-app.herokuapp.com
DJANGO_SETTINGS_MODULE=pointless_impressions_src.pointless_impressions.settings.staging

# -----------------------------
# Database settings
# -----------------------------
# For local Docker development:
STAGING_DB_NAME=staging_db
STAGING_DB_USER=staging_user
STAGING_DB_PASSWORD=staging_pass
STAGING_DB_HOST=db_staging
STAGING_DB_PORT=5432
# For Heroku deployment, use STAGING_DB_URL from course database maker instead

# -----------------------------
# Email settings for staging
# -----------------------------
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-ethereal-username
EMAIL_HOST_PASSWORD=your-ethereal-password
DEFAULT_FROM_EMAIL=staging@example.com

# -----------------------------
# Cloudinary settings (Media Storage)
# -----------------------------
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# -----------------------------
# AWS S3 Settings (Static Storage)
# -----------------------------
AWS_STORAGE_BUCKET_NAME=your-staging-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# -----------------------------
# Other Variables
# -----------------------------
CACHE_URL=redis://redis_staging:6379/0