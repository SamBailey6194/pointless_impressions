# -----------------------------
# Django settings
# -----------------------------
DJANGO_SECRET_KEY=your-production-secret-key-must-be-secure-and-unique
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=your-production-app.herokuapp.com
DJANGO_SETTINGS_MODULE=pointless_impressions_src.pointless_impressions.settings.production

# -----------------------------
# Database settings
# -----------------------------
# For local Docker development:
PROD_DB_NAME=prod_db
PROD_DB_USER=prod_user
PROD_DB_PASSWORD=prod_pass
PROD_DB_HOST=db_prod
PROD_DB_PORT=5432
# For Heroku deployment, use DATABASE_URL from course database maker instead

# -----------------------------
# Email settings for production
# -----------------------------
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-gmail@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@example.com

# -----------------------------
# Cloudinary settings (Media Storage)
# -----------------------------
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# -----------------------------
# AWS S3 Settings (Static Storage)
# -----------------------------
AWS_STORAGE_BUCKET_NAME=your-production-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# -----------------------------
# Other Variables
# -----------------------------
CACHE_URL=redis://redis_production:6379/0